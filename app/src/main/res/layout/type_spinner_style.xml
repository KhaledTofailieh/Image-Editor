<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="wrap_content"

>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_marginBottom="0dp">

        <TextView
                android:text="0"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:id="@+id/type_item_name"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp" android:layout_marginTop="0dp" android:textSize="14sp"
                app:fontFamily="casual"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@id/type_spinner_icon" android:layout_toEndOf="@id/type_spinner_icon"/>
        <ImageView
                android:layout_width="25dp"
                android:paddingBottom="0dp"
                android:layout_height="35dp" android:id="@+id/type_spinner_icon"
                android:src="@drawable/ic_line"
                android:layout_marginLeft="10dp" android:layout_marginBottom="0dp"
                android:layout_alignBottom="@+id/type_item_name"
                android:layout_marginStart="10dp" android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
        />
    </RelativeLayout>
</FrameLayout>