<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:background="@drawable/custom_fragment"
               android:alpha="0.3">

    </ImageView>
    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@drawable/ic_platte_btn" android:id="@+id/Edit_button"
                tools:ignore="VectorDrawableCompat"
                android:background="@drawable/custom_btn_round"
                android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"/>
        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@drawable/ic_filter_btn"
                android:layout_alignParentTop="true"
                android:id="@+id/Filter_button" android:layout_marginTop="0dp" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_marginRight="38dp"
                android:layout_marginEnd="38dp" android:background="@drawable/custom_btn_round"
                tools:ignore="VectorDrawableCompat"/>
        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@drawable/ic_color_format_btn"
                android:layout_alignParentStart="true" android:layout_marginStart="37dp"
                android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:id="@+id/Adjust_button" android:layout_marginTop="0dp" android:layout_marginLeft="37dp"
                android:background="@drawable/custom_btn_round" tools:ignore="VectorDrawableCompat"/>
        <TextView
                android:text="Adjust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:id="@+id/adjust_txt"
                android:layout_marginLeft="8dp" android:layout_marginTop="0dp"
                android:layout_below="@+id/Adjust_button" android:layout_alignLeft="@+id/Adjust_button"
                android:layout_alignStart="@+id/Adjust_button" android:textSize="10sp"
                android:textColor="@color/text_color_Light"/>
        <TextView
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_txt" android:layout_marginTop="0dp"
                android:layout_below="@+id/Edit_button" android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp" android:layout_alignLeft="@+id/Edit_button"
                android:layout_alignStart="@+id/Edit_button" android:textSize="10sp"
                android:textColor="@color/text_color_Light"/>
        <TextView
                android:text="Shapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filters_txt" android:layout_marginTop="-1dp"
                android:layout_below="@+id/Filter_button"
                android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
                android:layout_alignLeft="@+id/Filter_button" android:layout_alignStart="@+id/Filter_button"
                android:textSize="10sp" android:textColor="@color/text_color_Light"/>
    </RelativeLayout>
</FrameLayout>